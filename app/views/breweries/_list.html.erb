<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order: "name")%></th>
    <% if session[:last_order] == 'year' %>
      <th><%= link_to 'Year', breweries_path(order: "year_rev")%></th>
  <% else %>
    <th><%= link_to 'Year', breweries_path(order: "year")%></th>
  <% end %>
  </tr>
  </thead>

<tbody>
<% brw.each do |brewery| %>
<tr>
<td><%= link_to brewery.name, brewery %></td>
<td><%= brewery.year %></td>
<td></td>
</tr>
<% end %>
</tbody>
</table>
