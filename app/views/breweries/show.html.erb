<h2><%= @brewery.name %>
  <% if not @brewery.active %>
    <span class="label label-warning">retired</span>
  <% end %>
</h2>

<p>
  <em>Established year:</em>
  <%= @brewery.year %>
</p>

<p>Number of beers: <%= @brewery.beers.count %></p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
  <% end %>
</p>
<p>
  Has <%= pluralize(@brewery.ratings.count, 'rating') %>.
  <% if(@brewery.ratings.present?) %>
         Average: <%= round(@brewery.average_rating) %>
  <% end %>
</p>
<%= (link_to 'Edit', edit_brewery_path(@brewery), class:"btn btn-primary") if current_user %>
<%= link_to "Change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>
<%= (link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger") if current_user.admin %>
<%= link_to 'Back', breweries_path, class:"btn btn-primary" %>
