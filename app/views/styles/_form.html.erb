<%= form_with(model: style, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, size: "30x10" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

